<div class="modal-header">
    <h4 class="modal-title text-left"><i class="fal fa-abacus modal-icon"></i>&nbsp;Добавление группы операций</h4>
</div>
<div class="modal-body">
    <div class="tabs-container">
        <form method="POST" action="/standartizer/structure/add_group" id="standartizer-section__addgroup_form">
            <div class="form-group">
                <label>Наименование</label>
                <input type="text" value="" name="name" required="required" />
                <span class="help-block">Например: <i>Список операций для насосных станций</i></span>
            </div>

            <div class="row">
                <div class="col-sm-12 text-right">
                    <a href="#" class="btn btn-white" rel="modal:close">Закрыть</a>
                    <button type="submit" class="btn btn-success">Добавить </button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $(function(){
        $('#standartizer-section__addgroup_form').validate({
            submitHandler: function(form) {
                $(form).ajaxSubmit({
                    success: function(data) {
                        $.modal.close();
                        if (data.ok == true) {
                            swal({
                                title: "Отлично!",
                                text: "Новая группа операций успешно добавлена!",
                                type: "success"
                            }, function () {
                                Tabs.refreshTab(Tabs._currentTabId());
                            });
                        } else {
                            swal("Опачки!", "Что-то пошло не так :)", "error");
                        }
                    }
                });
            },
            rules: {
                name: {
                    required: true,
                }
            }
        });
    });
</script>