<% 
function format(o, n, x, s, c) {
    var re = '\\d(?=(\\d{' + (x || 3) + '})+' + (n > 0 ? '\\D' : '$') + ')',
        num = o.toFixed(Math.max(0, ~~n));

    return (c ? num.replace('.', c) : num).replace(new RegExp(re, 'g'), '$&' + (s || ','));
}
%>

<tr class="workers-brigade-list__item" data-id="<%= item.id %>">
    <% if (access.includes('workers:edit_brigade')) { %>
    <td class="text-center"><a href="/workers/brigades/edit/<%= item.id %>" rel="modal:open"><i class="fas fa-pencil-alt"></i></a></td>
    <% } %>
    <td class="text-left">Бригада <%=ii%></td>
    <td class="text-left"><%=item.group_name%></td>
    <td class="text-left"><%=item.division_name%></td>
    <td class="text-center"><%-(item.work_plan == 1 ? '2/2' : '5-ти дневка (ПН-ПТ)')%></td>
    <td class="text-center"><%=item.work_length%></td>
    <td class="text-center">
        <a href="/workers/brigades/rest_calendar/<%= item.id %>"  rel="modal:open" class="btn btn-sm btn-white"><i class="fas fa-calendar"></i></a>
    </td>
    <td class="text-center">
        <a href="/workers/brigades/calendar/<%= item.id %>" class="btn btn-sm btn-primary" onclick="Tabs.sameTab('/workers/brigades/calendar/<%= item.id %>');return false;"><i class="far fa-chart-bar"></i></a>
    </td>
    <% if (access.includes('workers:delete_brigade')) { %>
    <td class="text-center"><a title="Удалить бригаду" href="#" onclick="Workers_Brigades.deleteListitem('<%= item.id %>'); return false;"><i class="fa fa-trash text-danger"></i></a></td>
    <% } %>
</tr>